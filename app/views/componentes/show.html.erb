<%= content_for :nav do%>
  <%= render "layouts/navbar" %>
<% end %>

<%= render "shared/notice" %>

<div class = "container-box">
  
  <%= render "shared/pmc_basic_infos", pmc: @componente%>
  <hr>
  
  <p>
    <strong>Código Europeu:</strong>
    <%= @componente.cod_europeu %>
  </p>
  
  <p>
    <strong>Código INS:</strong>
    <%= @componente.cod_INS %>
  </p>
  
  <p>
    <strong>Descrição:</strong></br>
    <%= @componente.descricao %>
  </p>
  
  <p>
    <strong>Justificativa:</strong></br>
    <%= @componente.justificativa %>
  </p>
  
  <% if current_usuario.dev then%>
    <%= link_to 'Editar', edit_componente_path(@componente) %> 
  <% end %>
  
  <%= link_to 'Voltar', :back %>
</div>
